<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.warmtel.chatrobot"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.warmtel.chatrobot.Appstart"
            android:label="@string/title_activity_main"
            android:theme="@style/Anim_style2" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.warmtel.chatrobot.WhatsnewDoor"
            android:theme="@style/Anim_style2" />
        <activity
            android:name="com.warmtel.chatrobot.MainWeixin"
            android:theme="@style/Anim_style2" />
        <activity
            android:name="com.warmtel.chatrobot.Login"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.warmtel.chatrobot.Welcome"
            android:theme="@style/Anim_style2" />
        <activity
            android:name="com.warmtel.chatrobot.Whatsnew"
            android:theme="@style/Anim_style2" />
        <activity
            android:name="com.warmtel.chatrobot.ChatActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.warmtel.chatrobot.ShakeActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.warmtel.chatrobot.InfoXiaohei"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="Exit"
            android:theme="@style/MyDialogStyle" />
        <activity
            android:name="ExitFromSettings"
            android:theme="@style/MyDialogStyleBottom" />
        <activity
            android:name="InfoXiaoheiHead"
            android:theme="@style/HeadScale" />
        <activity
            android:name="LoadingActivity"
            android:theme="@style/MyDialogStyle" />
        <activity
            android:name="MainTopRightDialog"
            android:theme="@style/MyDialogStyleTop" />
        
        <service android:name="com.warmtel.chatrobot.service.MessageService" ></service>
    </application>

</manifest>